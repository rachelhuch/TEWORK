@model City
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<table>
    <tr>
        <td>Name:</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Country:</td>
        <td>@Model.Country</td>
    </tr>
    <tr>
        <td>District:</td>
        <td>@Model.District</td>
    </tr>
