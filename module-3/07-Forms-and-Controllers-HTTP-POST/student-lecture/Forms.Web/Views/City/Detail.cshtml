@model City
@{
    ViewData["Title"] = "Detail";
}

<h2>Details for @Model.Name</h2>

<table>
    <tr>
        <td>Name:</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Country:</td>
        <td>@Model.Country</td>
    </tr>
    <tr>
        <td>District:</td>
        <td>@Model.District</td>
    </tr>
    <tr>
    <td>Population:</td>
    <td>@Model.Population</td>
    </tr>
</table>
<a asp-controller="City" asp-action="Update" asp-route-id="@Model.CityId">Modify this City</a>
<br/>
<a asp-controller="City" asp-action="Delete" asp-route-id="@Model.CityId">Delete this City</a>
