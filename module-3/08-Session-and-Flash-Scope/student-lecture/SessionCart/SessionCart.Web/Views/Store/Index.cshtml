@model IList<Product>

@{
    ViewData["Title"] = "Index";
}
<h2>Buy Our Products!</h2>
<h3>@ViewData["Message"]</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Id</th>


        </tr>
    </thead>
    <tbody>
    @foreach (Product product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Cost</td>
            <td>
                <!--Add a button to add the product to our cart.-->
                <form asp-controller="Store" asp-action="Index" method="post"></form>
                <input type="hidden" asp-for="@product.Id" />
                <input type="submit" value="Add to cart"/>
            </td>
        </tr>

        <tr>
            <td>    </td>
        </tr>
    }
        </tbody>
</table>